<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="2.5dp"
                android:top="0dp" />
            <stroke
                android:width="2.5dp"
                android:color="#10000000" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/dolomit1" />
            <corners android:radius="4sp" />
            <size
                android:width="60dp"
                android:height="36dp" />
            <stroke
                android:width="1dp"
                android:color="@color/white" />
        </shape>
    </item>

    <item
        android:bottom="8dp"
        android:drawable="@drawable/ic_theme_ligth"
        android:left="18dp"
        android:right="18dp"
        android:top="8dp" />

</layer-list>